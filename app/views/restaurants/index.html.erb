<title>Madi's Yelp !</title>
<meta name="description" content=" Welcome to Madi's Yelp ! <%= @restaurants.count %> restaurants to discover now!">

<h1> These are all the restaurants </h1>

<%= link_to "Add a new restaurant", new_restaurant_path %>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h2>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </h2>
    <p>
      <%= restaurant.category.capitalize %>
    </p>
    <p>
      <%= restaurant.address.capitalize %>
    </p>
    <p>
      <%= restaurant.phone_number %>
    </p>
  </li>
  <% end %>
</ul>
